{
  "name": "order-import",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "publisher": "josAugusto",
  "version": "0.0.6",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/josemoura212/order-import.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "react",
    "typescript",
    "imports",
    "organize",
    "format",
    "mui",
    "material-ui",
    "tree-shaking",
    "bundle-size",
    "import-organizer"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "order-import.toggleFormatOnSave",
        "title": "%command.toggleFormatOnSave%"
      },
      {
        "command": "order-import.organizeImports",
        "title": "%command.organizeImports%"
      },
      {
        "command": "order-import.selectNormal",
        "title": "%command.selectNormal%"
      },
      {
        "command": "order-import.selectAligned",
        "title": "%command.selectAligned%"
      },
      {
        "command": "order-import.toggleMuiOptimization",
        "title": "%command.toggleMuiOptimization%"
      }
    ],
    "keybindings": [
      {
        "command": "order-import.organizeImports",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Order Import",
      "properties": {
        "orderImport.organizeOnSave": {
          "type": "boolean",
          "default": true,
          "description": "%config.organizeOnSave.description%"
        },
        "orderImport.formatStyle": {
          "type": "string",
          "enum": [
            "aligned",
            "normal"
          ],
          "default": "aligned",
          "description": "%config.formatStyle.description%",
          "enumDescriptions": [
            "Alinha todos os imports pelo 'from' com espaços extras",
            "Usa apenas 1 espaço antes do 'from'"
          ]
        },
        "orderImport.muiOptimization": {
          "type": "boolean",
          "default": false,
          "description": "%config.muiOptimization.description%"
        },
        "orderImport.groupByType": {
          "type": "boolean",
          "default": false,
          "description": "%config.groupByType.description%"
        },
        "orderImport.pathAliases": {
          "type": "array",
          "default": [
            "@/",
            "~/",
            "@components/",
            "@services/",
            "@utils/",
            "@hooks/"
          ],
          "description": "%config.pathAliases.description%"
        },
        "orderImport.optimizeBarrelFiles": {
          "type": "boolean",
          "default": false,
          "description": "Otimizar imports de barrel files locais (ex: './components' -> './components/Button')"
        },
        "orderImport.removeUnusedImports": {
          "type": "boolean",
          "default": false,
          "description": "%config.removeUnusedImports.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vscode-test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
